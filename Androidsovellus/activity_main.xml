<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="t.newdatabaseapplication.MainActivity">


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:text="Kellonaika:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textPrintLampotila"
            android:layout_alignStart="@+id/textLampotila"
            android:id="@+id/textKellonaika"
            style="@style/textTheme"


            android:layout_weight="1" />

        <TextView
            android:text="00:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textKellonaika"
            android:layout_centerHorizontal="true"
            android:id="@+id/textPrintKellonaika"
            style="@style/textTheme"
            android:layout_alignTop="@+id/textKellonaika"
            android:layout_weight="1"
            android:layout_gravity="right"
            />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="Lämpötila:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textLampotila"
            android:layout_above="@+id/buttonGet"
            android:layout_alignParentStart="true"
            style="@style/textTheme"

            android:layout_weight="1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textLampotila"
            android:layout_centerHorizontal="true"
            android:id="@+id/textPrintLampotila"
            android:text="00"
            android:layout_gravity="right"
            style="@style/textTheme"
            android:layout_weight="1" />

    </TableRow>

    <TableRow>
        <Button
            android:text="hae data "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonGet"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            style="@style/buttonTheme"
            android:layout_weight="1" />
</TableRow>


    </TableLayout>